{% form_theme form _self %}
{% block form_row %}
    {% spaceless %}
        {% if label is defined %}
            <label> {{ label|trans({}, translation_domain) }}<br>
                {{ form_errors(form) }}
                {{ form_widget(form) }}
            </label>
        {% endif %}
    {% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
    {% spaceless %}
        {% if errors is defined %}
            {% if errors|length > 0 %}
                {% for error in errors %}
                    <span class="error">{{ error.message }}</span><br>
                {% endfor %}
            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% if not signup %}
    <p>Du möchtest am ersten oder an folgenden Webmontagen teilnehmen? Dann trag' dich für den Newsletter ein.</p>

    <form method="POST" action="{{ path("wemoof_signup", {"id": event.id}) }}" class="clearfix">
        {{ form_widget(form) }}
        <button type="submit">Eintragen</button>
    </form>

    <p>
        <small>Ich werden deine E-Mail-Adresse nicht an Dritte weitergeben.</small>
    </p>
{% else %}
    <p>Danke! Ich melde mich!</p>
{% endif %}