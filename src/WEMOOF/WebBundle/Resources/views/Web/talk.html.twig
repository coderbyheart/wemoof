{% extends "WEMOOFWebBundle::page.html.twig" %}
{% set meta_title %}{{ talk }} | WEMO♥F #{{ event.id }} am {{ event.start|date }}{% endset %}
{% set meta_image %}{% spaceless %}
    {% if talk.speaker.hasGravatar %}
        {{ gravatar(talk.speaker.email) }}
    {% else %}
        {% if app.request.isSecure() %}https://{% else %}http://{% endif %}{{ app.request.host }}/upload/speaker/{{ talk.speaker|slug }}.png
    {% endif %}
{% endspaceless %}{% endset %}
{% block content %}
    <article class="talk">
        <h1>
            <a href="/">
                <img src="{{ asset('bundles/wemoofweb/images/logo-m-wide.png') }}" alt="WEMO♥OF &ndash; Webmontag Offenbach" id="logo"/>
            </a>
        </h1>

        <h2>
            {{ talk.name }}
        </h2>

        <p><em>Ein Vortrag von <a href="{{ path('wemoof_speaker', {'slug': talk.speaker|slug, 'id': talk.speaker.id}) }}">{{ talk.speaker }}</a> auf dem
                <a href="{{ path('wemoof_event', {'id': talk.event.id}) }}">{{ talk.event }}</a>.</em></p>

        {{ talk.description|md }}

        {%  set share_url %}{% if app.request.isSecure() %}https://{% else %}http://{% endif %}{{ app.request.host }}{{ app.request.pathInfo }}{% endset %}

        <a href="https://twitter.com/share" class="twitter-share-button" data-url="{{ share_url }}" data-text="Am 13.5.2013 findet der erste Webmontag Offenbach statt! Sei dabei!" data-via="wemoof" data-lang="de" data-hashtags="wemoof">Tweet</a>

        <div class="fb-like" data-href="{{ share_url }}" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false" data-font="tahoma" data-action="recommend"></div>

        <h3>Über <strong>{{ talk.speaker }}</strong></h3>

        {% include "WEMOOFWebBundle:Web:part/user.html.twig" with {"user": talk.speaker } %}

    </article>
{% endblock %}