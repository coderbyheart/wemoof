{% form_theme form _self %}
{% block form_row %}
    {% spaceless %}
        <label> {{ label|trans({}, translation_domain) }}<br>
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        </label>
    {% endspaceless %}
{% endblock form_row %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
